{
    "name": "caseproof/ai-summarize",
    "description": "WordPress plugin that adds AI service buttons to blog posts for quick content summarization.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Team Caseproof",
            "email": "developers@caseproof.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpcsstandards/phpcsextra": "^1.4",
        "phpcsstandards/phpcsutils": "^1.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Caseproof\\AiSummarize\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Caseproof\\AiSummarize\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "./vendor/bin/phpcs",
        "cs-check-errors": "@cs-check --error-severity=1 --warning-severity=6",
        "cs-fix": "./vendor/bin/phpcbf",
        "test": "./vendor/bin/phpunit"
    }
}
